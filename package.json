{
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "build:public": "cp -R public dist/public",
    "clean": "rm -rf dist && mkdir -p dist",
    "build:functions": "cp -R functions dist/functions",
    "copy:next": "cp -R .next dist/functions && mv dist/functions/.next dist/functions/next",
    "predeploy": "yarn build && yarn clean && yarn build:functions && yarn build:public && yarn copy:next",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "next": "^9.3.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "typescript": "^3.8.3"
  }
}
